<div class='row'>
  <div class='col-md-5'>
    <%= link_to image_tag(@comic.image_url, class: "col-md-12"), "/comics/#{@comic.id}", class:'img-responsive'%>
  </div>
  <div class='col-md-7'>
    
    <h1>
    <% if @comic.title %>
      <%= @comic.title %>
    <% else %>
      No Title Found
    <% end %>
    </h1>

    <h4>
    <% if @comic.description %>
      <%= @comic.description %>
    <% else %>
      No Description Found
    <% end %>
    </h4>

  <%= link_to "Delete Comic", "/comics/delete/#{@comic.id}", confirm:'Are you sure?', class: 'btn btn-warning' %>
  </div>
</div>
